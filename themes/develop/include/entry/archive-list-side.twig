{% set entryArchiveList =
  module('V2_Entry_ArchiveList', moduleId, { bid: null, cid: null, limit: null, keyword: null, tag: [], field: null })
%}

{% if entryArchiveList.items is not empty %}
  <div>
    {{ include('/admin/module/setting.twig', { moduleInfo: entryArchiveList.moduleInfo }) }}
    <ul class="border-b border-solid border-gray-200 text-sm text-gray-900">
      {% for item in entryArchiveList.items %}
        <li class="py-2 border-t border-solid border-gray-200">
          <a href="{{ item.url }}" class="flex items-center gap-3 py-2 hover:opacity-70">
            <span class="flex-1 block">{{ item.date|date('Y年m月') }}</span>
            {% if item.amount %}
              <span class="block min-w-10 py-1 rounded-full text-xs text-center bg-slate-100">{{ item.amount }}</span>
            {% endif %}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}
