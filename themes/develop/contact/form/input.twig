  <div role="radiogroup">
    <div class="flex items-center gap-x-3">
      <input
        type="radio"
        name="cue"
        value="SNS"
        {{ cue.array|checked('SNS') }}
        id="cue-sns"
        class="appearance-none h-4 w-4 border border-gray-200 rounded-full text-indigo-600 focus:ring-indigo-600 bg-no-repeat bg-[length:.5rem_auto] bg-center checked:border-transparent checked:bg-current checked:bg-(image:--bg-circle) scroll-mt-24 lg:scroll-mt-12"
      >
      <label for="cue-sns" class="font-bold cursor-pointer">SNS</label>
    </div>
    <div class="flex items-center gap-x-3 mt-1">
      <input
        type="radio"
        name="cue"
        value="ウェブ検索"
        {{ cue.array|checked('ウェブ検索') }}
        id="cue-search"
        class="appearance-none h-4 w-4 border border-gray-200 rounded-full text-indigo-600 focus:ring-indigo-600 bg-no-repeat bg-[length:.5rem_auto] bg-center checked:border-transparent checked:bg-current checked:bg-(image:--bg-circle) scroll-mt-24 lg:scroll-mt-12"
      >
      <label for="cue-search" class="font-bold cursor-pointer">ウェブ検索</label>
    </div>
    <div class="flex items-center gap-x-3 mt-1">
      <input
        type="radio"
        name="cue"
        value="イベント"
        {{ cue.array|checked('イベント') }}
        id="cue-event"
        class="appearance-none h-4 w-4 border border-gray-200 rounded-full text-indigo-600 focus:ring-indigo-600 bg-no-repeat bg-[length:.5rem_auto] bg-center checked:border-transparent checked:bg-current checked:bg-(image:--bg-circle) scroll-mt-24 lg:scroll-mt-12"
      >
      <label for="cue-event" class="font-bold cursor-pointer">イベント</label>
    </div>
    <div class="flex items-center gap-x-3 mt-1">
      <input
        type="radio"
        name="cue"
        value="その他"
        {{ cue.array|checked('その他') }}
        id="cue-others"
        class="appearance-none h-4 w-4 border border-gray-200 rounded-full text-indigo-600 focus:ring-indigo-600 bg-no-repeat bg-[length:.5rem_auto] bg-center checked:border-transparent checked:bg-current checked:bg-(image:--bg-circle) scroll-mt-24 lg:scroll-mt-12"
      >
      <label for="cue-others" class="font-bold cursor-pointer">その他</label>
    </div>
  </div>
  <input type="hidden" name="field[]" value="cue">
</div>

<div class="mt-8">
  <label for="privacy" class="inline-block mb-2">
    <span class="text-sm font-bold sm:text-base">プライバシーポリシー</span>
    <span class="bg-red-100 text-red-800 text-xs font-semibold ml-2 px-2.5 py-0.5 rounded-full">必須</span>
  </label>
  <div>
    {% set categoryField = module('V2_Category_Field', null, {
      cid: CID,
    }) %}

    {% if categoryField.fields.privacy_policy.value %}
    <div class="mb-3">
      {{ include('/include/edit/category-custom.twig', {cid: categoryField.cid}) }}
      <div class="overflow-auto h-60 p-6 border border-gray-200 rounded-md" tabindex="0">
        <p>{{ categoryField.fields.privacy_policy.value|nl2br|safe_html }}</p>
      </div>
    </div>
    {% endif %}

    <div class="relative flex gap-x-3">
      <div class="flex h-6 items-center">
        <input
          type="checkbox"
          name="privacy[]"
          value="1"
          {{ privacy.value|checked(1) }}
          id="privacy"
          data-validator="privacy"
          class="appearance-none h-4 w-4 border border-gray-200 [&.invalid]:border-red-500 rounded-md text-indigo-600 focus:ring-indigo-600 bg-[length:.75rem_auto] bg-center bg-no-repeat checked:border-transparent checked:bg-current checked:bg-(image:--bg-check) scroll-mt-24 lg:scroll-mt-12{% if privacy.invalid %} invalid{% endif %}"
          aria-required="true"
          aria-describedby="privacy-v-required-message"
          {% if privacy.invalid %}aria-invalid="true"{% endif %}
        >
      </div>
      <div class="leading-6">
        <label for="privacy" class="font-bold cursor-pointer">上記のプライバシーポリシーに同意する</label>
      </div>
    </div>
    <input type="hidden" name="field[]" value="privacy">
    <input type="hidden" name="privacy:v#required" id="privacy-v-required">
  </div>

  <div role="alert" aria-live="assertive">
    <div id="privacy-v-required-message" data-validator-label="privacy-v-required" class="validator-result-{% if privacy.v.required %}0{% endif %}">
      <span class="flex w-full mt-2 text-red-600 [&>svg]:text-foreground">
        <span aria-hidden="true">
        <svg class="w-5 h-5 -translate-y-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" /></svg>
      </span>
        <span class="ml-2 mb-1 font-bold leading-none tracking-tight">プライバシーポリシーに同意してください</span>
      </span>
    </div>
  </div>
</div>

