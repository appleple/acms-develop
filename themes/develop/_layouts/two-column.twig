<!DOCTYPE html>
<html class="has-[dialog:open]:overflow-hidden" lang="ja">
  <head>
    <meta charset="UTF-8" />
    {% block headMeta %}
      {{ include('/include/head/meta.twig') }}
    {% endblock %}

    {% block headLink %}
      {{ include('/include/head/link.twig') }}
    {% endblock %}

    {% block headJs %}
      {{ include('/include/head/js.twig') }}
    {% endblock %}
  </head>
  <body class="text-gray-700">
    {% block bodyStart %}
      {{ include('/include/body-start.twig') }}
    {% endblock %}

    <!-- ヘッダー -->
    {% block header %}
      {{ include('/include/header.twig') }}
    {% endblock %}

    <!-- ※管理用パーツ -->
    {% block adminPart %}
      <!-- アクションボックス -->
      @include("/admin/action.html")
      {{ include('/admin/switch-user.html') }}
    {% endblock %}

    <div class="container py-16 md:py-20">
      {% block topicPath %}
        <!-- トピックパス -->
        {% if touch('Touch_NotTop') %}
          <div class="mb-4">
            {{ include('/include/topicpath.twig') }}
          </div>
        {% endif %}
      {% endblock %}

      <div class="grid grid-cols-1 gap-x-10 gap-y-20 lg:grid-cols-[minmax(0,_1fr)_288px] lg:gap-x-20">
        <main>
          {% block main %}
            <p>
              継承してメインコンテンツを設定してください
            </p>
          {% endblock %}

          <!-- 確認用テンプレート -->
          @include('/include/check-seo.html')
        </main>

        <aside>
          <div>
            {% block aside %}
              <section>
                <h2 class="mb-3 text-lg text-gray-900 font-bold">カテゴリー</h2>
                {{ include('/include/category/list-side.twig') }}
              </section>

              <section class="mt-8">
                <h2 class="mb-3 text-lg text-gray-900 font-bold">ハッシュタグ</h2>
                {{ include('/include/tag/cloud-side.twig') }}
              </section>

              <section class="mt-8">
                <h2 class="mb-3 text-lg text-gray-900 font-bold">アーカイブ</h2>
                {{ include('/include/entry/archive-list-side.twig') }}
                <div class="mt-8">
                  {{ include('/include/calendar/month-side.html.twig') }}
                </div>
              </section>

              <section class="mt-8">
                <h2 class="mb-3 text-lg text-gray-900 font-bold">新着記事</h2>
                {{ include('/include/entry/summary-tiny.twig') }}
              </section>

              <section class="mt-10">
                <h2 class="sr-only">キーワード検索</h2>
                {{ include('/include/parts/search-keyword.twig') }}
              </section>
            {% endblock %}
          </div>
        </aside>
      </div>
    </div>

    <!-- フッター -->
    {% block footer %}
      {{ include('/include/footer.twig') }}
    {% endblock %}

    {% block bodyEnd %}
      {{ include('/include/body-end.twig') }}
    {% endblock %}
  </body>
</html>
